<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Andriod_Hart.Views.Devices"  
             Title="{Binding Title}"
             xmlns:local="clr-namespace:Andriod_Hart.ViewModels"  
             xmlns:model="clr-namespace:Andriod_Hart.Models">
  <ContentPage.Content>
        <ScrollView>
          <StackLayout>
                <Frame Padding="6" Margin="5" CornerRadius="10" HasShadow="True">
                    <StackLayout>
                        <Label Margin="8,3,0,0" TextColor="{StaticResource Text}" Text="MTM701.7" FontSize="Large" />
                        <BoxView HeightRequest="1" Margin="-15,10,-15,10" Color="#55000000" IsVisible="true"/>
                        <Button Text="Select" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"></Button>
                    </StackLayout>
                </Frame>
          </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>